<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="de.bitcoder.homectrl.LCARSLivingRoomFragment"
    android:rowCount="5"
    android:columnCount="8"
    android:useDefaultMargins="true">

    <!-- TODO: Update blank fragment layout -->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED\nON"
        android:id="@+id/button_LED_ON"
        android:background="@drawable/lcars_button_lightpurple_up"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="center_horizontal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-\nRED"
        android:id="@+id/button_LED_RED_DOWN"
        android:background="@drawable/lcars_button_orange_left"
        android:layout_row="1"
        android:layout_column="1"
        android:textAlignment="gravity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/textLCARS_large"
        android:text="20%"
        android:id="@+id/textView_LED_RED"
        android:layout_column="2"
        android:layout_row="1"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/lcars_orange"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED\nOFF"
        android:id="@+id/button_LED_OFF"
        android:background="@drawable/lcars_button_lightpurple_down"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_gravity="center_horizontal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+\nRED"
        android:id="@+id/button_LED_RED_UP"
        android:background="@drawable/lcars_button_orange_right"
        android:layout_row="1"
        android:layout_column="3"
        android:textAlignment="gravity" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-\nGREEN"
        android:id="@+id/button_LED_GREEN_DOWN"
        android:background="@drawable/lcars_button_lightpurple_left"
        android:layout_row="2"
        android:layout_column="1"
        android:textAlignment="gravity" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+\nGREEN"
        android:id="@+id/button_LED_GREEN_UP"
        android:background="@drawable/lcars_button_lightpurple_right"
        android:layout_row="2"
        android:layout_column="3"
        android:textAlignment="gravity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/textLCARS_large"
        android:text="20%"
        android:id="@+id/textView_LED_GREEN"
        android:layout_column="2"
        android:layout_row="2"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/lcars_lightpurple"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-\nBLUE"
        android:id="@+id/button_LED_BLUE_DOWN"
        android:background="@drawable/lcars_button_blue_left"
        android:layout_row="3"
        android:layout_column="1"
        android:textAlignment="gravity" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+\nBLUE"
        android:id="@+id/button_LED_BLUE_UP"
        android:background="@drawable/lcars_button_blue_right"
        android:layout_row="3"
        android:layout_column="3"
        android:textAlignment="gravity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/textLCARS_large"
        android:text="20%"
        android:id="@+id/textView_LED_BLUE"
        android:layout_column="2"
        android:layout_row="3"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/lcars_blue"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAMP\nON"
        android:id="@+id/button_WzStehlampe_ON"
        android:background="@drawable/lcars_button_blue_up"
        android:layout_row="1"
        android:layout_column="4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAMP\nOFF"
        android:id="@+id/button_WzStehlampe_OFF"
        android:background="@drawable/lcars_button_blue_down"
        android:layout_row="3"
        android:layout_column="4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAMP\nON"
        android:id="@+id/button_WzDeckenlampe_ON"
        android:background="@drawable/lcars_button_lightpurple_up"
        android:layout_row="1"
        android:layout_column="5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLIND\nUP"
        android:id="@+id/button_WzRolladenUp"
        android:background="@drawable/lcars_button_orange_up"
        android:layout_row="1"
        android:layout_column="6"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/textLCARS_large"
        android:text="20%"
        android:id="@+id/textView_WzRolladenValue"
        android:layout_column="6"
        android:layout_row="2"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/lcars_orange"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLIND\nSTOP"
        android:id="@+id/button_WzRolladenStop"
        android:background="@drawable/lcars_button_orange_right"
        android:layout_row="2"
        android:layout_column="7" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAMP\nOFF"
        android:id="@+id/button_WzDeckenlampe_OFF"
        android:background="@drawable/lcars_button_lightpurple_down"
        android:layout_row="3"
        android:layout_column="5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLIND\nDOWN"
        android:id="@+id/button_WzRolladenDown"
        android:background="@drawable/lcars_button_orange_down"
        android:layout_row="3"
        android:layout_column="6"
        android:layout_gravity="center" />

</GridLayout>
