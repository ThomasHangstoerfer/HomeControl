<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.bitcoder.homectrl.LCARSLivingRoomFragment"
    android:rowCount="4"
    android:columnCount="5">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_margin="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED\nON"
        android:id="@+id/button_LED_ON"
        android:background="@drawable/lcars_button_lightpurple_up"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED\nOFF"
        android:id="@+id/button_LED_OFF"
        android:background="@drawable/lcars_button_lightpurple_down"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_margin="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAMP\nON"
        android:id="@+id/button_WzStehlampe_ON"
        android:background="@drawable/lcars_button_blue_up"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_margin="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAMP\nOFF"
        android:id="@+id/button_WzStehlampe_OFF"
        android:background="@drawable/lcars_button_blue_down"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_margin="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLIND\nUP"
        android:id="@+id/button_WzRolladenUp"
        android:background="@drawable/lcars_button_orange_up"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_margin="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/textLCARS_large"
        android:text="20%"
        android:id="@+id/textView_WzRolladenValue"
        android:layout_column="3"
        android:layout_row="2"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/lcars_orange"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLIND\nSTOP"
        android:id="@+id/button_WzRolladenStop"
        android:background="@drawable/lcars_button_orange_right"
        android:layout_row="2"
        android:layout_column="4"
        android:layout_margin="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLIND\nDOWN"
        android:id="@+id/button_WzRolladenDown"
        android:background="@drawable/lcars_button_orange_down"
        android:layout_row="3"
        android:layout_column="3"
        android:layout_margin="30dp" />

</GridLayout>
