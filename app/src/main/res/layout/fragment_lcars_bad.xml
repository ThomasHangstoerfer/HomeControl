<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.bitcoder.homectrl.LCARSMainActivity$PlaceholderFragment"
    android:background="#000000"
    android:columnCount="5"
    android:rowCount="5">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="@style/textLCARS_large"
        android:text="DESIRED TEMP"
        android:id="@+id/textView_Caption_desiredTemp"
        android:layout_column="0"
        android:layout_row="0"
        android:textAlignment="gravity"
        android:gravity="center_vertical|right"
        android:layout_gravity="center_vertical|right"
        android:textColor="@color/lcars_brown"
        android:textSize="40dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="@style/textLCARS_large"
        android:text="--.-°"
        android:id="@+id/textView_desiredTemp"
        android:layout_column="1"
        android:layout_row="0"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/lcars_brown"
        android:textSize="40dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="@style/textLCARS_large"
        android:text="MEASURED TEMP"
        android:id="@+id/textView_Caption_measuredTemp"
        android:layout_column="0"
        android:layout_row="1"
        android:textAlignment="gravity"
        android:gravity="center_vertical|right"
        android:layout_gravity="center_vertical|right"
        android:textColor="@color/lcars_brown"
        android:textSize="40dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="@style/textLCARS_large"
        android:text="--.-°"
        android:id="@+id/textView_measuredTemp"
        android:layout_column="1"
        android:layout_row="1"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/lcars_brown"
        android:textSize="40dp"
        android:layout_marginLeft="30dp" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="@style/textLCARS_large"
        android:text="HUMIDITY"
        android:id="@+id/textView_Caption_humidity"
        android:layout_column="0"
        android:layout_row="2"
        android:textAlignment="gravity"
        android:gravity="center_vertical|right"
        android:layout_gravity="center_vertical|right"
        android:textColor="@color/lcars_blue"
        android:textSize="40dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="@style/textLCARS_large"
        android:text="--%"
        android:id="@+id/textView_humidity"
        android:layout_column="1"
        android:layout_row="2"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/lcars_blue"
        android:textSize="40dp"
        android:layout_marginLeft="30dp" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="@style/textLCARS_large"
        android:text="WINDOW"
        android:id="@+id/textView_Caption_window"
        android:layout_column="0"
        android:layout_row="3"
        android:textAlignment="gravity"
        android:gravity="center_vertical|right"
        android:layout_gravity="center_vertical|right"
        android:textColor="@color/lcars_orange"
        android:textSize="40dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="@style/textLCARS_large"
        android:text="\?"
        android:id="@+id/textView_window"
        android:layout_column="1"
        android:layout_row="3"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/lcars_orange"
        android:fontFamily="fonts/lcarsgtj3.ttf"
        android:textSize="40dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="@style/textLCARS_large"
        android:text="BATTERY"
        android:id="@+id/textView_Caption_battery"
        android:layout_column="0"
        android:layout_row="4"
        android:textAlignment="gravity"
        android:gravity="center_vertical|right"
        android:layout_gravity="center_vertical|right"
        android:textColor="@color/lcars_orange"
        android:textSize="40dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="@style/textLCARS_large"
        android:text="\?"
        android:id="@+id/textView_battery"
        android:layout_column="1"
        android:layout_row="4"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/lcars_orange"
        android:fontFamily="fonts/lcarsgtj3.ttf"
        android:textSize="40dp"
        android:layout_marginLeft="30dp" />

    <de.bitcoder.homectrl.BarChart
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chartTemp"
        android:layout_row="0"
        android:layout_column="4"
        android:layout_rowSpan="5" />


</GridLayout>
