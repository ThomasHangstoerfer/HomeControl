<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.bitcoder.homectrl.LCARSMainActivity$PlaceholderFragment"
    android:background="#000000"
    android:columnCount="7"
    android:rowCount="3">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/button_clear"
        android:layout_column="0"
        android:layout_row="1"
        android:gravity="bottom|right"
        android:textSize="16dp"
        android:textAlignment="gravity"
        android:background="@drawable/lcars_button_lightpurple_left"
        android:layout_margin="5dp"
        android:padding="2dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="UP"
        android:id="@+id/buttonTempUp"
        android:layout_alignBottom="@+id/buttonTempDown"
        android:layout_alignEnd="@+id/buttonTempDown"
        android:layout_column="1"
        android:layout_row="0"
        android:textSize="16dp"
        android:textAlignment="gravity"
        android:gravity="bottom|right"
        android:background="@drawable/lcars_button_orange_up"
        android:layout_margin="5dp"
        android:padding="2dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="@style/textLCARS_large"
        android:text="19Â°"
        android:id="@+id/textView_degree"
        android:layout_column="1"
        android:layout_row="1"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/lcars_orange"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="UP"
        android:id="@+id/buttonDayUp"
        android:layout_column="2"
        android:layout_row="0"
        android:textSize="16dp"
        android:textAlignment="gravity"
        android:gravity="bottom|right"
        android:background="@drawable/lcars_button_blue_up"
        android:layout_margin="5dp"
        android:padding="2dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="DOWN"
        android:id="@+id/buttonTempDown"
        android:layout_column="1"
        android:layout_row="2"
        android:textSize="16dp"
        android:textAlignment="gravity"
        android:gravity="bottom|right"
        android:background="@drawable/lcars_button_orange_down"
        android:layout_margin="5dp"
        android:padding="2dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="@style/textLCARS_large"
        android:text="21."
        android:id="@+id/textView_day"
        android:layout_column="2"
        android:layout_row="1"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/lcars_blue"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="DOWN"
        android:id="@+id/buttonDayDown"
        android:layout_column="2"
        android:layout_row="2"
        android:textSize="16dp"
        android:textAlignment="gravity"
        android:gravity="bottom|right"
        android:background="@drawable/lcars_button_blue_down"
        android:layout_margin="5dp"
        android:padding="2dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="UP"
        android:id="@+id/buttonMonthUp"
        android:layout_column="3"
        android:layout_row="0"
        android:textSize="16dp"
        android:textAlignment="gravity"
        android:gravity="bottom|right"
        android:background="@drawable/lcars_button_blue_up"
        android:layout_margin="5dp"
        android:padding="2dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="@style/textLCARS_large"
        android:text="02."
        android:id="@+id/textView_month"
        android:layout_column="3"
        android:layout_row="1"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/lcars_blue"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="DOWN"
        android:id="@+id/buttonMonthDown"
        android:layout_column="3"
        android:layout_row="2"
        android:textSize="16dp"
        android:textAlignment="gravity"
        android:gravity="bottom|right"
        android:background="@drawable/lcars_button_blue_down"
        android:layout_margin="5dp"
        android:padding="2dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="UP"
        android:id="@+id/buttonHourUp"
        android:layout_column="4"
        android:layout_row="0"
        android:textSize="16dp"
        android:textAlignment="gravity"
        android:gravity="bottom|right"
        android:background="@drawable/lcars_button_brown_up"
        android:layout_margin="5dp"
        android:padding="2dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="@style/textLCARS_large"
        android:text="17:"
        android:id="@+id/textView_hour"
        android:layout_column="4"
        android:layout_row="1"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/lcars_brown"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="DOWN"
        android:id="@+id/buttonHourDown"
        android:layout_column="4"
        android:layout_row="2"
        android:textSize="16dp"
        android:textAlignment="gravity"
        android:gravity="bottom|right"
        android:background="@drawable/lcars_button_brown_down"
        android:layout_margin="5dp"
        android:padding="2dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="UP"
        android:id="@+id/buttonMinuteUp"
        android:layout_column="5"
        android:layout_row="0"
        android:textSize="16dp"
        android:textAlignment="gravity"
        android:gravity="bottom|right"
        android:background="@drawable/lcars_button_brown_up"
        android:layout_margin="5dp"
        android:padding="2dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="@style/textLCARS_large"
        android:text="30"
        android:id="@+id/textView_minute"
        android:layout_column="5"
        android:layout_row="1"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/lcars_brown"
        android:fontFamily="fonts/lcarsgtj3.ttf"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="DOWN"
        android:id="@+id/buttonMinuteDown"
        android:layout_column="5"
        android:layout_row="2"
        android:textSize="16dp"
        android:textAlignment="gravity"
        android:gravity="bottom|right"
        android:background="@drawable/lcars_button_brown_down"
        android:layout_margin="5dp"
        android:padding="2dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Set"
        android:id="@+id/button_set"
        android:layout_column="6"
        android:layout_row="1"
        android:textSize="16dp"
        android:textAlignment="gravity"
        android:gravity="bottom|right"
        style="?android:attr/buttonStyleSmall"
        android:background="@drawable/lcars_button_lightpurple_right"
        android:layout_margin="5dp"
        android:padding="2dp" />

</GridLayout>
