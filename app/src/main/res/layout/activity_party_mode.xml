<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.bitcoder.homectrl.PartyModeActivity"
    android:background="#ff000000">

    <GridLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:layout_alignWithParentIfMissing="false"
        android:background="#ff000000"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/topleft"
            android:layout_rowSpan="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="HOME\nCONTROL"
            android:id="@+id/textView4"
            android:background="@drawable/heading_right"
            android:textColor="#ffcc6698"
            android:gravity="left|center_vertical"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Party Mode Until:"
            android:id="@+id/textView3"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentEnd="false"
            android:textColor="#ffff9900"
            android:fontFamily="fonts/lcarsgtj3.ttf"
            android:layout_gravity="top|left"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center_horizontal"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="2">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LinLayVertDay">

                <ImageButton
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/buttonDayUp"
                    android:src="@drawable/button_up"
                    android:background="#00ffffff"
                    android:layout_marginRight="2dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="07"
                    android:id="@+id/textViewDay"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textColor="#ff9a99ff" />

                <ImageButton
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/buttonDayDown"
                    android:src="@drawable/button_down"
                    android:background="#00ffffff"
                    android:layout_marginRight="2dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LinLayVertMonth">

                <ImageButton
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/buttonMonthUp"
                    android:src="@drawable/button_up"
                    android:background="#00ffffff" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="2"
                    android:id="@+id/textViewMonth"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textColor="#ff9a99ff" />

                <ImageButton
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/buttonMonthDown"
                    android:src="@drawable/button_down"
                    android:background="#00ffffff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LinLayVertHour"
                android:layout_marginLeft="10dp">

                <ImageButton
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/buttonHourUp"
                    android:src="@drawable/button_up"
                    android:background="#00ffffff"
                    android:layout_marginRight="2dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="15"
                    android:id="@+id/textViewHour"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textColor="#ff9a99ff" />

                <ImageButton
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/buttonHourDown"
                    android:src="@drawable/button_down"
                    android:background="#00ffffff"
                    android:layout_marginRight="2dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:id="@+id/LinLayVertMin">

                <ImageButton
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/buttonMinUp"
                    android:src="@drawable/button_up"
                    android:background="#00ffffff" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="47"
                    android:id="@+id/textViewMin"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:elegantTextHeight="false"
                    android:gravity="center_horizontal"
                    android:textColor="#ff9a99ff" />

                <ImageButton
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/buttonMinDown"
                    android:src="@drawable/button_down"
                    android:background="#00ffffff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageButton
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonTempUp"
                    android:src="@drawable/button_up"
                    android:background="#00ffffff" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textViewTemp"
                    android:text="19.5Â°C"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textColor="#ff9a99ff" />

                <ImageButton
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonTempDown"
                    android:src="@drawable/button_down"
                    android:background="#00ffffff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SET"
                    android:id="@+id/buttonSet"
                    android:background="@drawable/button_right2"
                    android:backgroundTint="#ffff9900" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CLR"
                    android:id="@+id/buttonClear"
                    android:background="@drawable/button_right2"
                    android:backgroundTint="#ffcc6698" />
            </LinearLayout>
        </LinearLayout>

    </GridLayout>

</RelativeLayout>
