<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="de.bitcoder.homectrl.LCARSSettingsFragment"
    android:background="#FF000000">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:columnCount="3"
        android:rowCount="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SETTINGS"
            android:id="@+id/textView_settings"
            android:layout_gravity="left|top"
            android:textColor="@color/lcars_orange"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="0" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="HOSTNAME"
            android:id="@+id/textView_hostname"
            android:layout_column="0"
            android:layout_row="1"
            android:textColor="@android:color/black"
            android:background="@color/lcars_blue"
            android:layout_gravity="bottom|fill"
            android:textAlignment="gravity"
            android:gravity="bottom|right"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="16dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_hostname"
            android:text="pi"
            android:textColor="@color/lcars_orange"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Set"
            android:id="@+id/button_set_hostname"
            android:layout_column="2"
            android:layout_row="1"
            android:textSize="16dp"
            android:textAlignment="gravity"
            android:gravity="bottom|right"
            android:background="@drawable/lcars_button_blue_right"
            android:layout_margin="5dp"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="PORT"
            android:id="@+id/textView_port"
            android:layout_column="0"
            android:layout_row="2"
            android:textColor="@android:color/black"
            android:layout_gravity="fill"
            android:background="@color/lcars_blue"
            android:textAlignment="gravity"
            android:gravity="bottom|right"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="16dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_port"
            android:text="7072"
            android:textColor="@color/lcars_orange"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Set"
            android:id="@+id/button_set_port"
            android:layout_column="2"
            android:layout_row="2"
            android:textSize="16dp"
            android:textAlignment="gravity"
            android:gravity="bottom|right"
            android:background="@drawable/lcars_button_blue_right"
            android:layout_margin="5dp"
            android:padding="2dp" />

    </GridLayout>

</FrameLayout>
